.navbar.navbar-light.navbar-expand-md.fixed-top.noprint(style="background-color: #e3f2fd;")
	a(href="/")
		img(src="/icon/firm.jpg", width="35px")
	if crUser && crUser.role == Conf.roleUser.owner.num
		-a;
		button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation")
			<span class="navbar-toggler-icon"></span>

		.collapse.navbar-collapse#navbarTogglerDemo02
			//- ul.navbar-nav.mr-auto.mt-2.mt-xl-0
				li.nav-item.active
					a.nav-link(href="/users") 成员
				li.nav-item.active
					a.nav-link(href="/usFirm") 公司
			ul.navbar-nav.ml-auto
				li
					a(href="/user/"+crUser._id)
						span.navbar-brand 欢迎:
						span.navbar-brand
							if crUser.nome
								-a;
								strong #{crUser.nome}
							else
								strong #{crUser.code}
				li
					a.ml-4.btn.btn-danger(href="/logout") 退出