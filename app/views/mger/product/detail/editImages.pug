.row
	.col-3
		.title images
		.desp 产品图片 Array
		//- button.btn.btn-warning.showImagesBtn(type="button") 修改图片
		//- input#orgImages(type="hidden", value=product.images)
		button.mr-5.btn.btn-link.text-warning#imgsEditBtn(type="button") 修改图片
		button.btn.btn-success#subBtnPutImgs.imgsEdit(type="button" style="display:none") 确认更新
	.col-9
		form#objectPutImgsForm(method="post", action="/productPutImages", enctype="multipart/form-data")
			input(type="hidden", name="id", value=product.id)
			.row.border.rounded.p-2.mt-2
				- sub = -1;
				each image in product.images
					- sub++;
					.col-2
						//- input(type="hidden", name="data[images]["+sub+"][src]", value=image.src)
						input(type="hidden", name="data[images]["+sub+"][id]", value=image.id)
						input(type="hidden", name="data[images]["+sub+"][name]", value=image.name)
						input(type="hidden", name="data[images]["+sub+"][alt]", value=image.alt)

						img.css-img-neat.border.rounded(src=image.src, width="100%", height="150px")
						.text-center.imgsEdit(style="display:none")
							a.text-danger(href="/productDelImage/"+image.id+"?product_id="+product.id) [删除]
			.row#newImgs.imgsEdit(style="display:none")
				.col-2
					img#crtImgs.rounded-circle(src="/icon/img.jpg", width="100%")
			input#uploadImgs.btn.btn-info.btn-block(type="file", name="fls", multiple, style="display:none")

script(src="/js/global/imagesEdit.js")