table.mt-3.table.table-hover
	tr
		td: strong 账号:
		td #{user.code}
	if user.firm
		- firm = user.firm;
		tr
			td: strong 公司:
			td #{firm.code} [#{firm.nome}] #{firm.nick}
	tr
		td: strong 角色:
		td
			- let role = '';
			each roleUser in Conf.roleUser
				- role = '';
				if roleUser.num == user.role
					- role = roleUser.val;
					- break;
			span #{role}
	tr
		td: strong 姓名:
		td #{user.nome}
	tr
		td: strong 语言:
		td 
			- let lang = '';
			each userLang in Conf.userLang
				- lang = '';
				if userLang.num == user.lang
					- lang = userLang.val;
					- break;
			span #{lang}
	tr
		td: strong 上下架:
		td
			- let yn = '';
			each shelf in Conf.shelf
				- yn = '';
				if shelf.num == user.shelf
					- yn = shelf.val;
					- break;
			span #{yn}
	tr
		td: strong createAt:
		td #{moment(user.crtAt).format('DD/MM/YYYY HH:mm:ss')}