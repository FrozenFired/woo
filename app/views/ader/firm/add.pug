extends ../aalayout/layout

block content
	.container
		nav(aria-label="breadcrumb")
			ol.breadcrumb
				li.breadcrumb-item: a(href="/ader") Home
				li.breadcrumb-item: a(href="/adFirms") 公司列表
				li.breadcrumb-item.active(aria-current="page") #{title}
		hr
		form#adFirmNew-Form(method="post", action="/adFirmNew")
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="codeIpt")#codeLabel.text-info 公司编号
				.col-8.col-sm-6
					input#codeIpt.form-control(type="text", name="obj[code]")
				.offset-4.offset-sm-2.col-8.col-sm-6#codeOpt.text-danger(style="display:none")
					span 公司编号长度必须为#{Stint.extent.firm.code.len}的英文字母
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="nomeIpt")#nomeLabel.text-info 公司名称
				.col-8.col-sm-6
					input#nomeIpt.form-control(type="text", name="obj[nome]")
				.offset-4.offset-sm-2.col-8.col-sm-6#nomeOpt.text-danger(style="display:none")
					span 请输入公司名称 至少#{Stint.extent.firm.nome.min}位
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="nickIpt")#nickLabel.text-info 公司代称
				.col-8.col-sm-6
					input#nickIpt.form-control(type="text", name="obj[nick]")
				.offset-4.offset-sm-2.col-8.col-sm-6#nickOpt.text-danger(style="display:none")
					span 请输入公司代称 至少#{Stint.extent.firm.nick.min}位
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="categFirmIpt")#categFirmLabel.text-info 公司类型
				.col-8.col-sm-6
					select#categFirmIpt.form-control(name="obj[categFirm]", data-style="btn-info")
						option 请选择
						each categFirm in Conf.categFirm
							-a;
							option(value=categFirm.num) #{categFirm.val}
				.offset-4.offset-sm-2.col-8.col-sm-6#categFirmOpt.text-danger(style="display:none") 请选择公司类型
			.border.rounded
				.form-group.row
					label.col-4.col-sm-2.col-form-label(for="wpdnsIpt")#wpdnsLabel.text-info 前端网址
					.col-8.col-sm-6
						input#wpdnsIpt.form-control(type="text", name="obj[wpdns]")
				.form-group.row
					label.col-4.col-sm-2.col-form-label(for="wookeyIpt")#wookeyLabel.text-info 公钥
					.col-8.col-sm-6
						input#wookeyIpt.form-control(type="text", name="obj[wookey]")
				.form-group.row
					label.col-4.col-sm-2.col-form-label(for="woosecretIpt")#woosecretLabel.text-info 密钥
					.col-8.col-sm-6
						input#woosecretIpt.form-control(type="text", name="obj[woosecret]")
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="shelfIpt")#shelfLabel 上下架
				.col-8.col-sm-6
					select#shelfIpt.form-control(name="obj[shelf]", data-style="btn-info")
						each shelf in Conf.shelf
							-a;
							if shelf.num == Conf.shelf.put.num
								-a;
								option(value=shelf.num, selected="selected") #{shelf.val}
							else
								option(value=shelf.num) #{shelf.val}
				.offset-4.offset-sm-2.col-8.col-sm-6#shelfOpt.text-danger(style="display:none") 请选择上下架
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="countryIpt") 国家
				.col-8.col-sm-6
					input#countryIpt.form-control(type="text", name="obj[country]")
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="respIpt") 负责人
				.col-8.col-sm-6
					input#respIpt.form-control(type="text", name="obj[resp]")
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="addrIpt") 地址
				.col-8.col-sm-6
					input#addrIpt.form-control(type="text", name="obj[addr]")
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="telIpt") 电话
				.col-8.col-sm-6
					input#telIpt.form-control(type="text", name="obj[tel]")
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="emailIpt") 邮件
				.col-8.col-sm-6
					input#emailIpt.form-control(type="text", name="obj[email]")
				.offset-4.col-8.col-form-label.text-danger
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="noteIpt") 备注
				.col-8.col-sm-6
					textarea.form-control#noteIpt(name="obj[note]",rows="3", placeholder="公司备注")
			hr
			.form-group.row
				.offset-sm-6.col-sm-2
					input.btn.btn-success.btn-block(type="submit" value="提交")
	input#extent(type="hidden", value=Stint.extent.firm)
	script(src="/js/ader/firmEdit.js")